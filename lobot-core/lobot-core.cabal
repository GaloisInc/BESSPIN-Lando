executable lobot
  hs-source-dirs:      exe
  main-is:             Lobot.hs
  default-language:    Haskell2010
  ghc-options:         -Wall
  build-depends:       lobot-core,
                       base,
                       aeson,
                       ansi-terminal,
                       bytestring,
                       directory,
                       hashmap,
                       optparse-applicative,
                       parameterized-utils,
                       pretty,
                       process,
                       text

test-suite lobot-tests
  type:               exitcode-stdio-1.0
  hs-source-dirs:     tests
  main-is:            Tests.hs
  default-language:   Haskell2010
  ghc-options:        -Wall
  build-depends:      lobot-core,
                      base,
                      bytestring,
                      filepath,
                      parameterized-utils,
                      pretty-show,
                      tasty,
                      tasty-golden
