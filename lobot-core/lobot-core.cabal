name:                lobot-core
version:             0.1
synopsis:            backend library for Lobot language
-- description:
-- bug-reports:
license:             BSD3
license-file:        LICENSE
author:              Ben Selfridge
maintainer:          benselfridge@galois.com
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Lobot.Kind
                       Lobot.Expr
                       Lobot.JSON
                       Lobot.Instances
                       Lobot.Syntax
                       Lobot.Syntax.Pretty
                       Lobot.Lexer
                       Lobot.Parser
                       Lobot.Pretty
                       Lobot.TypeCheck
                       Lobot.TypeCheck.Monad
                       Lobot.TypeCheck.ISyntax
                       Lobot.TypeCheck.FirstPass
                       Lobot.TypeCheck.SecondPass
                       Lobot.Types
                       Lobot.Utils

  -- other-modules:       Lobot.TypeCheck.Types
  --                      Lobot.TypeCheck.FirstPass
  --                      Lobot.TypeCheck.SecondPass
  -- other-extensions:
  build-depends:       base >=4.13,
                       aeson,
                       bv-sized >= 1.0.1,
                       bytestring,
                       parameterized-utils >= 2.1.0,
                       array,
                       containers,
                       hashmap,
                       mtl,
                       pretty,
                       text,
                       what4
  hs-source-dirs:      src
  build-tools:         alex, happy
  default-language:    Haskell2010
  ghc-options:         -Wall

-- executable lobotIG
--   hs-source-dirs:      exe
--   main-is:             LobotIG.hs
--   default-language:    Haskell2010
